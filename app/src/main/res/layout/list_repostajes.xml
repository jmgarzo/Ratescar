<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImgIcono"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbCoche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/lbMatricula2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbConsumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="1dp"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lbUnidadConsumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/lbKmRecorridosRepostaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="10dp" />
            <!--<TextView-->
            <!--android:id="@+id/lbUnidadDistanciaKmRepostaje"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="10dp"-->
            <!--android:textStyle="normal" />-->

            <TextView
                android:id="@+id/lbSeparadorDistanciasRepostajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/separador_distancia_repostajes"
                android:textSize="15dp"
                android:textStyle="normal" />

            <!--<TextView-->
            <!--android:id="@+id/lbTotalRepostaje"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="15dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:text="@string/km_repostaje_total"/>-->

            <!--<TextView-->
            <!--android:id="@+id/lbKmTotalesRepostaje"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="15dp" />-->


            <TextView
                android:id="@+id/lbKmRepostaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/lbUnidadDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:textSize="15dp"
                android:textStyle="normal" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>