                    android:text="@string/lb_fecha_inicio_consumo" />

                <EditText
                    android:id="@+id/txtFechaInicioConsumo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbFechaFinConsumo"
